<!-- Your form goes here! -->
<%= form_for(@baby) do |f| %>
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :weight %>
      <%= f.number_field :weight %>
    </div>

    <div class="field">
      <%= f.label :birth_date %>
      <%= f.text_field :birth_date, :value => @baby.birth_date.strftime('%Y-%m-%d')  %>
    </div>

    <%= f.submit %>

<% end %>

